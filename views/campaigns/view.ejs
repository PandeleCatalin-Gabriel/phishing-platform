<!DOCTYPE html>
<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Platformă Educațională Phishing</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header') %>
    
    <main class="main-content">
        <div class="page-header">
            <div>
                <h1><%= campaign.name %></h1>
                <p class="text-secondary"><%= campaign.description || 'Fără descriere' %></p>
            </div>
            <div class="header-actions">
                <span class="status status-<%= campaign.status %>">
                    <%= campaign.status %>
                </span>
                <% if (campaign.status === 'draft' && stats.totalTargets > 0) { %>
                    <button onclick="launchCampaign(<%= campaign.id %>)" class="btn btn-success">
                        ▶️ Pornește Campania
                    </button>
                    <a href="/campaigns/<%= campaign.id %>/edit" class="btn btn-secondary">Editează</a>
                <% } else if (campaign.status === 'active') { %>
                    <button onclick="stopCampaign(<%= campaign.id %>)" class="btn btn-danger">
                        ⏹️ Oprește Campania
                    </button>
                <% } else if (campaign.status === 'draft') { %>
                    <a href="/campaigns/<%= campaign.id %>/edit" class="btn btn-secondary">Editează</a>
                <% } %>
            </div>
        </div>
        
        <!-- Statistici campanie -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon">👥</div>
                <div class="stat-content">
                    <h3><%= stats.totalTargets %></h3>
                    <p>Ținte totale</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">✉️</div>
                <div class="stat-content">
                    <h3><%= stats.emailsSent %></h3>
                    <p>Email-uri trimise</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">📧</div>
                <div class="stat-content">
                    <h3><%= stats.openRate %>%</h3>
                    <p>Rată deschidere</p>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">🎯</div>
                <div class="stat-content">
                    <h3><%= stats.clickRate %>%</h3>
                    <p>Rată click</p>
                </div>
            </div>
        </div>
        
        <div class="campaign-sections">
            <!-- Secțiune Template -->
            <section class="campaign-section">
                <h2>Template Email</h2>
                <% if (campaign.template_id) { %>
                    <div class="template-selected">
                        <div class="template-info">
                            <h4>📧 <%= campaign.template_name || 'Instagram Login' %></h4>
                            <p>Template selectat și gata de utilizare</p>
                        </div>
                        <button onclick="changeTemplate(<%= campaign.id %>)" class="btn btn-secondary">
                            Schimbă Template
                        </button>
                    </div>
                <% } else { %>
                    <div class="empty-section">
                        <p>Niciun template selectat</p>
                        <button onclick="selectTemplate(<%= campaign.id %>)" class="btn btn-primary">
                            Alege Template
                        </button>
                    </div>
                <% } %>
            </section>
            
            <!-- Secțiune Ținte -->
            <section class="campaign-section">
                <h2>Listă destinatari</h2>
                <% if (stats.totalTargets > 0) { %>
                    <div class="targets-info">
                        <p><strong><%= stats.totalTargets %></strong> destinatari adăugați</p>
                        <div class="targets-actions">
                            <a href="/targets/campaign/<%= campaign.id %>" class="btn btn-secondary">
                                Vezi lista
                            </a>
                            <a href="/targets/add?campaign=<%= campaign.id %>" class="btn btn-primary">
                                + Adaugă țintă
                            </a>
                        </div>
                    </div>
                <% } else { %>
                    <div class="empty-section">
                        <p>Nicio țintă adăugată</p>
                        <a href="/targets/add?campaign=<%= campaign.id %>" class="btn btn-primary">
                            + Adaugă prima țintă
                        </a>
                    </div>
                <% } %>
            </section>
        </div>
        
        <!-- Timeline simplificat -->
        <section class="timeline-section">
            <h2>Istoric activitate</h2>
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-date">
                        Creat la: <%= new Date(campaign.created_at).toLocaleDateString('ro-RO') %>
                    </div>
                </div>
            </div>
        </section>
        
        <% if (campaign.status === 'draft') { %>
            <div class="danger-zone">
                <h3>Zona periculoasă</h3>
                <button onclick="deleteCampaign(<%= campaign.id %>)" class="btn btn-danger">
                    🗑️ Șterge campania
                </button>
            </div>
        <% } %>
    </main>
    
    <%- include('../partials/footer') %>
    
    <script src="/js/main.js"></script>
    <script>
        function selectTemplate(campaignId) {
            window.location.href = '/campaigns/' + campaignId + '/select-template';
        }
        
        function changeTemplate(campaignId) {
            window.location.href = '/campaigns/' + campaignId + '/select-template';
        }
        
        function launchCampaign(id) {
            // Prompt pentru frecvență
            const frequency = prompt('La câte minute să se trimită email-urile?\n(Minim 1 minut, recomandat 30+ minute)', '30');
            
            if (!frequency) {
                return;
            }
            
            const freq = parseInt(frequency);
            if (isNaN(freq) || freq < 1) {
                alert('Frecvența trebuie să fie cel puțin 1 minut!');
                return;
            }
            
            if (!confirm(`Campania va trimite email-uri la fiecare ${freq} minute.\nContinuați?`)) {
                return;
            }
            
            fetch('/campaigns/' + id + '/launch', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ frequency: freq })
            })
            .then(function(res) { return res.json(); })
            .then(function(data) {
                if (data.success) {
                    alert('Campanie pornită cu succes! Email-urile vor fi trimise.');
                    location.reload();
                } else {
                    alert('Eroare: ' + data.error);
                }
            });
        }
        
        function stopCampaign(id) {
            if (!confirm('Sigur vrei să oprești campania?')) {
                return;
            }
            
            fetch('/campaigns/' + id + '/stop', {
                method: 'POST'
            })
            .then(function(res) { return res.json(); })
            .then(function(data) {
                if (data.success) {
                    alert('Campanie oprită!');
                    location.reload();
                } else {
                    alert('Eroare: ' + data.error);
                }
            });
        }
        
        function deleteCampaign(id) {
            if (!confirm('Sigur vrei să ștergi această campanie?')) {
                return;
            }
            
            fetch('/campaigns/' + id, {
                method: 'DELETE'
            })
            .then(function(res) { return res.json(); })
            .then(function(data) {
                if (data.success) {
                    alert('Campanie ștearsă!');
                    window.location.href = '/campaigns';
                } else {
                    alert('Eroare: ' + data.error);
                }
            });
        }
    </script>
</body>
</html>